{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "types": [
            "inferno"
        ],
        "jsx": "preserve",
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "removeComments": false,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

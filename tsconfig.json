{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    // This is REALLY important and different from "module"
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "jsx": "preserve",
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "removeComments": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "traceResolution": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
